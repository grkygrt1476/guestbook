<% include header %>

<h2>새 후기 써줘</h2>

<form method="post" role="form">
  <div class="form-group">
    <label for="title">제 목</label>
    <input type="text" class="form-control" id="title" name="title" placeholder="제목 입력" required>
  </div>
  <div class="form-group">
    <label for="body">후 기 내 용</label>
    <textarea class="form-control" id="body" name="body" placeholder="교육 과정을 참여한 후기를 적어 주세요" rows="3" required></textarea>
  </div>
  <div class="form-group">
    <input type="submit" value="후 기 등 록" class="btn btn-primary">
  </div>
</form>

<% include footer %>
